{
  "name": "hackafor",
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm --recursive dev",
    "lint": "pnpm --recursive lint",
    "fix": "pnpm --recursive fix",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "lint-staged": "^14.0.1",
    "simple-git-hooks": "^2.9.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged --cwd apps/front && pnpm lint-staged --cwd apps/back"
  },
  "lint-staged": {
    "*": "pnpm run fix"
  }
}
